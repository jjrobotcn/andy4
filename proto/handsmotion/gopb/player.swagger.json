    },
    "handsmotionPlayerState": {
      "type": "string",
      "enum": [
        "UNKNOWN",
        "STOPPED",
        "PLAYING"
      ],
      "default": "UNKNOWN",
      "description": "- UNKNOWN: 默认零值，不使用\n - STOPPED: 已停止\n - PLAYING: 播放中",
      "title": "播放状态"
    },
