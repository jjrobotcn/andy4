  "definitions": {
    "handsmotionOnStateChangeResponse": {
      "type": "object",
      "properties": {
        "state": {
          "$ref": "#/definitions/handsmotionPlayerState",
          "title": "播放状态"
        },
        "uri": {
          "$ref": "#/definitions/handsmotionUri",
          "title": "动作组资源Uri"
        }
      }
    },
    "handsmotionPlayRequest": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string",
          "title": "使用自定义名时将播放首个匹配项"
        },
        "repeated": {
          "type": "integer",
          "format": "int32",
          "title": "播放动作重复次数\n小于0: 无限重复，可通过Stop停止\n0: 同等设置该值为1\n\u003e 0: 根据设置播放次数重复播放\n默认播放1次"
        },
        "repeated_interval_ms": {
          "type": "integer",
          "format": "int64",
          "title": "重复播放间隔，单位为毫秒\n默认为0，无间隔"
        }
      }
    },
